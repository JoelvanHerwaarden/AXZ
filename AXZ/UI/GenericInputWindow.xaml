<Window 
    x:Class="AXZ.UI.GenericInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AXZ.UI"
    mc:Ignorable="d"
    MinWidth="500"
    Height="180"
    MinHeight="180"
    MaxHeight="180"
    Width="500"
    WindowStartupLocation="CenterOwner"
    Title="Beyond Revit"
    Background="{DynamicResource MainBackground}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
               <ResourceDictionary Source="pack://application:,,,/AXZ;component/Resources/DarkModeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition x:Name="VariableRow" Height="60" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <Label x:Name="InstructionLabel" 
               VerticalAlignment="Top"
               Content="Instruction"
               FontSize="16" 
               VerticalContentAlignment="Center"
               Margin="10,10,10,0" 
               Foreground="{DynamicResource FontColor}" />


        <Border Style="{DynamicResource BackgroundBorder}" 
                Grid.Row="1"
                Margin="10,10,10,10">
            <TextBox x:Name="InputTextbox"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="16"
                     Foreground="{DynamicResource FontColor}"
                     Margin="15,7.5,15,7.5"
                     TextWrapping="Wrap"
                     />
        </Border>

        <Button x:Name="SubmitButton" 
                HorizontalAlignment="Right"
                Width="100"
                Grid.Row="7" 
                Style="{DynamicResource RoundButton}" 
                Content="Submit" 
                Click="SubmitButton_Click"
                Margin="10,5,10,10"   
                Grid.Column="2"/>
    </Grid>
</Window>
