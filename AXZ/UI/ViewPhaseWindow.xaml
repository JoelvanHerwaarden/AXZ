<Window 
    x:Class="AXZ.UI.ViewPhaseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AXZ.UI"
    mc:Ignorable="d"
    MinWidth="500"
    Height="430"
    MinHeight="430"
    MaxHeight="430"
    Width="500"
    WindowStartupLocation="CenterOwner"
    Title=""
    Background="{DynamicResource MainBackground}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AXZ;component/Resources/DarkModeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="60" />

            <RowDefinition Height="45" />
            <RowDefinition Height="60" />

            <RowDefinition Height="45" />
            <RowDefinition Height="60" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Top"
               Content="Current View Phase"
               FontSize="16" 
               VerticalContentAlignment="Center"
               Margin="10,10,10,0" 
               Foreground="{DynamicResource FontColor}" />

        <Border Style="{DynamicResource BackgroundBorder}" 
                Grid.Row="1"
                Margin="10,10,10,10">
            <TextBox x:Name="PhaseTextBox"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="16"
                     Foreground="{DynamicResource FontColor}"
                     Margin="15,7.5,15,7.5"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     />
        </Border>

        <Label VerticalAlignment="Top"
        Content="Select Phase Filter Level"
        FontSize="16" 
        VerticalContentAlignment="Center"
        Margin="10,10,10,0" 
        Grid.Row="2"
        Foreground="{DynamicResource FontColor}" />

        <Border Style="{DynamicResource BackgroundBorder}" 
        Grid.Row="3"
        Margin="10,10,10,10">
            <ComboBox 
                Style="{DynamicResource DarkComboBox}"
                x:Name="PhaseLevelListbox"
                Background="Transparent"
                BorderThickness="0"
                FontSize="16"
                Foreground="{DynamicResource FontColor}"
                Margin="15,5,15,5"
             />
        </Border>

        <Label VerticalAlignment="Top"
            Content="Add Filters To View"
            FontSize="16" 
            VerticalContentAlignment="Center"
            Margin="10,10,10,0" 
            Grid.Row="4"
            Foreground="{DynamicResource FontColor}" />
        <CheckBox x:Name="AddToViewCheckbox"
            Style="{StaticResource ToggleCheckbox}"
                  Grid.Row="5"
                  Margin="10"/>

        <Button x:Name="SubmitButton" 
                HorizontalAlignment="Right"
                Width="100"
                Grid.Row="7" 
                Style="{DynamicResource RoundButton}" 
                Content="Submit" 
                Click="SubmitButton_Click"
                Margin="10,5,10,10"   
                Grid.Column="2"/>
    </Grid>
</Window>
